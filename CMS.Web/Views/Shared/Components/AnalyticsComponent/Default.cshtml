@model AnalyticsViewModel

@if (Model.AnalyticsCodes.Any())
{
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-L45W3R3M3E"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      
      @foreach (var item in Model.AnalyticsCodes)
      {
          @Html.Raw($"gtag('config', {item});")
      }
    </script>
}

@Html.Raw(Model.ExtraScript)