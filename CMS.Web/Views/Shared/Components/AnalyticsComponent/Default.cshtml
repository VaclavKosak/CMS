@model AnalyticsViewModel

@if (Model.AnalyticsCodes.Any())
{
    <!-- Google tag (gtag.js) -->
    @foreach (var item in Model.AnalyticsCodes)
    {
        @Html.Raw($"<script async src=\"https://www.googletagmanager.com/gtag/js?id={item}\"></script>")
    }
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      
      @foreach (var item in Model.AnalyticsCodes)
      {
          @Html.Raw($"gtag('config', '{item}');")
      }
    </script>
}

@Html.Raw(Model.ExtraScript)