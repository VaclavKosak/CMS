@model CMS.Models.Gallery.GalleryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = _localizer["title"];
}

<p><strong>@_localizer["gallery_title"]:</strong> @Model.Title</p>
<p><strong>@_localizer["description"]:</strong> @Model.Description</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="@_localizer["delete"]" class="btn btn-danger"/>
</form>