@model CMS.Models.Category.CategoryNewModel

@{
    ViewBag.Title = _localizer["title"];
}

<form asp-action="Create" class="row g-3 needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-12">
        <label asp-for="Name" class="form-label">@_localizer["name"]</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="invalid-feedback">@_localizer["name_invalid"]</span>
    </div>

    <div class="col-12">
        <input class="btn btn-dark" type="submit" value="@_localizer["create_button"]"/>
    </div>
</form>