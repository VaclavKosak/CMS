@model CMS.Models.Category.CategoryUpdateModel

@{
    ViewBag.Title = @_localizer["title"];
}

<form asp-action="Edit" class="row g-3 needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="col-md-12">
        <label asp-for="Name" class="form-label">@_localizer["name"]</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="invalid-feedback">@_localizer["name_invalid"]</span>
    </div>

    <div class="col-12">
        <input class="btn btn-dark" type="submit" value="@_localizer["edit_button"]" />
    </div>
</form>