@page
@model RegisterModel
@{
    ViewData["Title"] = _localizer["title"];
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row g-3">
        <h1 class="h3 mb-3 display-6 fw-bold">@ViewData["Title"]</h1>
        <div class="col-12">
            <div asp-validation-summary="All" class="invalid-feedback"></div>
        </div>
        <div class="col-12">
            <label asp-for="Input.Email" class="form-label">@_localizer["email"]</label>
            <input asp-for="Input.Email" class="form-control"/>
            <span asp-validation-for="Input.Email" class="invalid-feedback">@_localizer["email_invalid"]</span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Password" class="form-label">@_localizer["password"]</label>
            <input asp-for="Input.Password" class="form-control"/>
            <span asp-validation-for="Input.Password" class="invalid-feedback">@_localizer["password_invalid"]</span>
        </div>

        <div class="col-12">
            <label asp-for="Input.ConfirmPassword" class="form-label">@_localizer["confirm_password"]</label>
            <input asp-for="Input.ConfirmPassword" class="form-control"/>
            <span asp-validation-for="Input.Password"
                  class="invalid-feedback">@_localizer["confirm_password_invalid"]</span>
        </div>

        <input class="w-100 btn btn-lg btn-dark" type="submit" value="@_localizer["register_button"]"/>
    </div>
</form>
                