@page
@model LoginModel

@{
    ViewData["Title"] = _localizer["title"];
}

<form method="post">
    <div class="row g-3">
        <h1 class="h3 mb-3 display-6 fw-bold">@ViewData["Title"]</h1>
        <div class="col-12">
            <div asp-validation-summary="All" class="invalid-feedback"></div>
        </div>
        <div class="col-12">
            <label asp-for="Input.Email" class="form-label">@_localizer["email"]</label>
            <input asp-for="Input.Email" class="form-control"/>
            <span asp-validation-for="Input.Email" class="invalid-feedback">@_localizer["email_invalid"]</span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Password" class="form-label">@_localizer["password"]</label>
            <input asp-for="Input.Password" class="form-control"/>
            <span asp-validation-for="Input.Password" class="invalid-feedback">@_localizer["password_invalid"]</span>
        </div>

        <div class="col-12">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe"/>
                    @_localizer["remember_me"]
                </label>
            </div>
        </div>

        <input class="w-100 btn btn-lg btn-dark" type="submit" value="@_localizer["login_button"]"/>

        <div class="col-12">
            <a class="form-signin__link" asp-page="./ForgotPassword">@_localizer["forgot_password"]</a>
            <a class="form-signin__link" asp-page="./Register"
               asp-route-returnUrl="@Model.ReturnUrl">@_localizer["register"]</a>
            <a class="form-signin__link"
               asp-page="./ResendEmailConfirmation">@_localizer["resend_email_confirmation"]</a>
        </div>
    </div>
</form>
